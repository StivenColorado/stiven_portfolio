---

{
    PROJECTS.map(
        (
            { title, description, tags, images, videos, link, github },
            index: number,
        ) => (
            <article class="mb-10 mx-auto w-full max-w-[1200px] p-4 bg-gray-900 rounded-lg shadow-lg">
                <div
                    class={`flex flex-col md:flex-row gap-4 md:gap-8 ${index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse"}`}
                >
                    {/* Slider Container */}
                    <div class="w-full md:w-1/2 h-[300px] md:h-[400px] relative">
                        <div
                            id="animation-carousel"
                            class="relative w-full h-full"
                            data-carousel="static"
                        >
                            <div class="relative h-full overflow-hidden rounded-lg">
                                {images.map(
                                    (image: string, imgIndex: number) => (
                                        <div
                                            class={`absolute inset-0 duration-200 ease-linear ${imgIndex === 0 ? "block" : "hidden"}`}
                                            data-carousel-item
                                        >
                                            <img
                                                src={image}
                                                class="block w-full h-full object-cover rounded-lg"
                                                alt="Proyecto imagen"
                                            />
                                        </div>
                                    ),
                                )}
                                {videos.map(
                                    (video: string, vidIndex: number) => (
                                        <div
                                            class={`absolute inset-0 duration-200 ease-linear ${images.length === 0 && vidIndex === 0 ? "block" : "hidden"}`}
                                            data-carousel-item
                                        >
                                            <video
                                                autoplay
                                                muted
                                                controls
                                                src={video}
                                                class="block w-full h-full object-contain rounded-lg"
                                            />
                                        </div>
                                    ),
                                )}
                            </div>
                            {/* Slider Controls */}
                            <button
                                type="button"
                                class="absolute top-1/2 left-2 transform -translate-y-1/2 z-30 p-2 bg-white/30 hover:bg-white/50 rounded-full"
                                data-carousel-prev
                            >
                                <svg
                                    class="w-4 h-4 text-white"
                                    aria-hidden="true"
                                    fill="none"
                                    viewBox="0 0 6 10"
                                >
                                    <path
                                        stroke="currentColor"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M5 1 1 5l4 4"
                                    />
                                </svg>
                            </button>
                            <button
                                type="button"
                                class="absolute top-1/2 right-2 transform -translate-y-1/2 z-30 p-2 bg-white/30 hover:bg-white/50 rounded-full"
                                data-carousel-next
                            >
                                <svg
                                    class="w-4 h-4 text-white"
                                    aria-hidden="true"
                                    fill="none"
                                    viewBox="0 0 6 10"
                                >
                                    <path
                                        stroke="currentColor"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M1 9 5 5 1 1"
                                    />
                                </svg>
                            </button>
                        </div>
                    </div>

                    {/* Project Information */}
                    <div class="w-full md:w-1/2 flex flex-col justify-between space-y-4">
                        <div>
                            <h1 class="text-2xl font-bold text-purple-400 mb-4">
                                {title}
                            </h1>
                            <p class="text-base mb-4 text-gray-200">
                                {description}
                            </p>
                        </div>

                        {/* Technology Icons */}
                        <ul class="flex flex-wrap gap-2 mb-4">
                            {tags.map((tag, tagIndex: number) => (
                                <li
                                    class={`flex items-center gap-x-2 text-xs font-semibold rounded-lg ${tag.class} py-1 px-3`}
                                >
                                    <tag.icon class="w-5 h-5" /> {tag.name}
                                </li>
                            ))}
                        </ul>

                        {/* Links */}
                        <div class="flex gap-4 flex-wrap">
                            {link && (
                                <a
                                    href={link}
                                    class="underline text-sky-400 text-sm hover:text-sky-300"
                                    target="_blank"
                                >
                                    {link}
                                </a>
                            )}
                            {github && (
                                <a
                                    href={github}
                                    class="flex items-center gap-2 bg-purple-950/50 rounded-full px-3 py-1 text-sky-400 hover:text-sky-300 text-sm"
                                    target="_blank"
                                >
                                    <Github class="w-5 h-5" /> GitHub
                                </a>
                            )}
                        </div>
                    </div>
                </div>
            </article>
        ),
    )
}
